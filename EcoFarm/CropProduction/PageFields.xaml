            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Style="{StaticResource StackPanelMainStyle}" Orientation="Vertical" HorizontalAlignment="Stretch">
                            <TextBlock TextWrapping="Wrap" Padding="3">
                                <Run Text="Номер поля: " FontWeight="Bold"/>
                                <Run Text="{Binding Number}"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Padding="3">
                                <Run Text="Количество высаженных семян: " FontWeight="Bold"/>
                                <Run Text="{Binding Quantity}"/>
                                <Run Text=" Затраты на семена: " FontWeight="Bold"/>
                                <Run Text="{Binding Expenses}"/>
                                <Run Text="₽"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Padding="3">
                                <Run Text="Дата посадки: " FontWeight="Bold"/>
                                <Run Text="{Binding BoardingDate, StringFormat='dd.MM.yyyy'}"/>
                                <Run Text="Дата сбора: " FontWeight="Bold"/>
                                <Run Text="{Binding CollectionDate, StringFormat='dd.MM.yyyy'}"/>
                                <Run Text=" Размер поля: " FontWeight="Bold"/>
                                <Run Text="{Binding Size}"/>
                                <Run Text="м²"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Padding="3">
                                <Run Text="Растение на поле: " FontWeight="Bold"/>
                                <Run Text="{Binding Plants.Name}"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Padding="3">
                                <Run Text="Заметки к полю: " FontWeight="Bold"/>
                                <Run Text="{Binding Note, TargetNullValue=Нет, FallbackValue=Нет}" FontSize="18"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Grid.Column="1" Style="{StaticResource StackPanelMainStyle}" HorizontalAlignment="Right">
            <TextBlock x:Name="Counter" Style="{StaticResource TextBlockMain}" FontSize="14" Width="auto"/>
        </StackPanel>
    </Grid>
</Page>
